{
  "name": "@ginga-ui/core",
  "private": false,
  "version": "0.9.1",
  "type": "module",
  "description": "brand-new UI component library for web",
  "keywords": [
    "react",
    "ui",
    "component",
    "library"
  ],
  "author": {
    "name": "newt239",
    "email": "ysti2019.win2020.st@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newt239/ginga-ui.git"
  },
  "bugs": {
    "url": "https://github.com/newt239/ginga-ui/issues"
  },
  "main": "src/index.ts",
  "scripts": {
    "dev": "pnpm build:fast -- --watch",
    "build": "tsup src --dts",
    "build:fast": "tsup src"
  },
  "dependencies": {
    "@ginga-ui/accordion": "workspace:*",
    "@ginga-ui/anchor": "workspace:*",
    "@ginga-ui/box": "workspace:*",
    "@ginga-ui/button": "workspace:*",
    "@ginga-ui/button-group": "workspace:*",
    "@ginga-ui/card": "workspace:*",
    "@ginga-ui/checkbox": "workspace:*",
    "@ginga-ui/checkbox-group": "workspace:*",
    "@ginga-ui/dialog": "workspace:*",
    "@ginga-ui/form-control": "workspace:*",
    "@ginga-ui/heading": "workspace:*",
    "@ginga-ui/image": "workspace:*",
    "@ginga-ui/input": "workspace:*",
    "@ginga-ui/list": "workspace:*",
    "@ginga-ui/paragraph": "workspace:*",
    "@ginga-ui/radio": "workspace:*",
    "@ginga-ui/radio-group": "workspace:*",
    "@ginga-ui/select": "workspace:*",
    "@ginga-ui/slider": "workspace:*",
    "@ginga-ui/switch": "workspace:*",
    "@ginga-ui/tab": "workspace:*",
    "@ginga-ui/table": "workspace:*",
    "@ginga-ui/utils": "workspace:*",
    "react-aria": "^3.36.0",
    "react-aria-components": "^1.5.0"
  },
  "devDependencies": {
    "react": "^18.3.1"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "homepage": "https://github.com/newt239/ginga-ui#readme",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ],
    "banner": {
      "js": "\"use client\""
    },
    "sourcemap": true
  }
}