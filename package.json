{
  "name": "ginga-ui",
  "private": false,
  "version": "0.7.8",
  "type": "module",
  "description": "brand-new UI component library for web",
  "keywords": [
    "react",
    "ui",
    "component",
    "library"
  ],
  "author": {
    "name": "newt239",
    "email": "ysti2019.win2020.st@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newt239/ginga-ui.git"
  },
  "bugs": {
    "url": "https://github.com/newt239/ginga-ui/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint --fix ./src/**/*.{ts,tsx}",
    "stylelint": "stylelint \"./src/**/*.css\" --fix",
    "format": "prettier --write \"./src/**/*.{ts,tsx}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN"
  },
  "module": "./dist/es/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/es/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./core": {
      "types": "./dist/types/components/index.d.ts",
      "import": "./dist/es/components.js",
      "require": "./dist/cjs/components.cjs"
    },
    "./core/*": {
      "types": "./dist/types/components/*/*.d.ts",
      "import": "./dist/es/src/components/*/*.js",
      "require": "./dist/cjs/src/components/*/*.cjs"
    },
    "./ai": {
      "types": "./dist/types/lib/ai/themeClient.d.ts",
      "import": "./dist/es/ai.js",
      "require": "./dist/cjs/ai.cjs"
    },
    "./variables.css": "./dist/variables.css",
    "./style.css": "./dist/ginga-ui.css"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "chroma-js": "^3.1.2",
    "openai": "^4.77.3",
    "react-aria": "^3.36.0",
    "react-aria-components": "^1.5.0",
    "valibot": "1.0.0-beta.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/builder-vite": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@types/chroma-js": "^3.1.0",
    "@types/css-modules": "^1.0.5",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "chromatic": "^11.22.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.4.2",
    "storybook": "^8.4.7",
    "stylelint": "^16.12.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "homepage": "https://github.com/newt239/ginga-ui#readme"
}