{
  "name": "ginga-ui",
  "private": true,
  "version": "0.9.2",
  "type": "module",
  "description": "brand-new UI component library for web",
  "keywords": [
    "react",
    "ui",
    "component",
    "library"
  ],
  "author": {
    "name": "newt239",
    "email": "ysti2019.win2020.st@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newt239/ginga-ui.git"
  },
  "bugs": {
    "url": "https://github.com/newt239/ginga-ui/issues"
  },
  "homepage": "https://github.com/newt239/ginga-ui#readme",
  "packageManager": "pnpm@10.5.2",
  "scripts": {
    "changeset-version": "changeset version",
    "changeset-publish": "changeset publish",
    "clean": "find . -type d \\( -name 'node_modules' -o -name '.turbo' -o -name 'dist' \\) -prune -exec rm -rf {} +",
    "dev": "turbo run dev --filter=./packages/**",
    "build": "turbo run build --filter=./packages/**",
    "build:fast": "turbo run build:fast --filter=./packages/**",
    "lint": "eslint --fix",
    "stylelint": "stylelint \"./**/*.css\" --fix",
    "format": "prettier --write \"./**/*.{ts,tsx}\""
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "chroma-js": "^3.1.2",
    "openai": "^4.85.4",
    "react-aria": "^3.37.0",
    "react-aria-components": "^1.6.0",
    "valibot": "1.0.0-beta.11"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@types/chroma-js": "^3.1.1",
    "@types/css-modules": "^1.0.5",
    "@types/node": "^22.13.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "chromatic": "^11.26.1",
    "esbuild-plugin-react18-css": "^0.0.4",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.5.2",
    "stylelint": "^16.14.1",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-standard": "^36.0.1",
    "tsup": "^8.4.0",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.0.0",
      "react-dom": "^18.0.0"
    }
  }
}