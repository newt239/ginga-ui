{
  "name": "ginga-ui",
  "private": false,
  "version": "0.2.0",
  "type": "module",
  "description": "brand-new UI component library for web",
  "keywords": [
    "react",
    "ui",
    "component",
    "library"
  ],
  "author": "newt239 <ysti2019.win2020.st@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/newt239/ginga-ui"
  },
  "bugs": {
    "url": "https://github.com/newt239/ginga-ui/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint --fix ./src/**/*.{ts,tsx}",
    "stylelint": "stylelint \"./src/**/*.css\" --fix",
    "format": "prettier --write \"./src/**/*.{ts,tsx}\"",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "main": "./dist/ginga-ui.umd.js",
  "module": "./dist/ginga-ui.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/ginga-ui.es.js",
      "require": "./dist/ginga-ui.umd.js"
    },
    "./dist/style.css": "./dist/style.css",
    "./variables.css": "./dist/variables.css"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "openai": "^4.68.1",
    "react": "^18.3.1",
    "react-aria-components": "^1.4.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@storybook/addon-essentials": "^8.3.6",
    "@storybook/addon-links": "^8.3.6",
    "@storybook/blocks": "^8.3.6",
    "@storybook/builder-vite": "^8.3.6",
    "@storybook/react": "^8.3.6",
    "@storybook/react-vite": "^8.3.6",
    "@types/css-modules": "^1.0.5",
    "@types/node": "^22.7.7",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "clsx": "^2.1.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^15.11.0",
    "prettier": "^3.3.3",
    "storybook": "^8.3.6",
    "stylelint": "^16.10.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0",
    "vite": "^5.4.9",
    "vite-plugin-dts": "^4.2.4"
  }
}